{
    "manifest_version": 2,
    "name": "RoyalRoad Reader",
    "description": "Streamlines the RoyalRoad Website",
    "version": "1.0.0",
    "icons": {"128": "icon_128.png"},
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "RoyalRoad Reader"
    },
    "content_scripts": [{
        "js": ["scripts/extension.js","scripts/content.js"],
        "matches": ["https://www.royalroad.com/fiction/*/*/chapter/*/*"],
        "all_frames": true
      }],
    "permissions": [
        "activeTab",
		"storage"
    ]
}